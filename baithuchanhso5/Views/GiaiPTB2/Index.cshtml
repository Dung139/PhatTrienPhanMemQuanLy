@{
    ViewData["Title"] = "Giải phương trình bậc 2";
}

<h2>Giải phương trình bậc 2: ax² + bx + c = 0</h2>

<form asp-action="Index" method="post">
    <label>a:</label>
    <input type="number" step="any" name="a" required /><br /><br />

    <label>b:</label>
    <input type="number" step="any" name="b" required /><br /><br />

    <label>c:</label>
    <input type="number" step="any" name="c" required /><br /><br />

    <button type="submit">Giải</button>
</form>

@if (ViewBag.KetQua != null)
{
    <hr />
    <h3>Kết quả:</h3>
    <p>@ViewBag.KetQua</p>
}

